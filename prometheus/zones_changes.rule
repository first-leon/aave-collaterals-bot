---
groups:
  - name: aaveBot
    rules:

      - alert: HighAmountCollateralsUnderRisk
        expr: sum(aave_bot_collateral_percentage{zone=~"C|D|liquidation", bin="2"}) > 15.0
        for: 30m
        labels:
          severity: high
        annotations:
          summary: High percent of AAVE collaterals in dangerous zone ðŸ”¥
          description: It is {{ $value | printf "%.1f" }}% of AAVE collaterals within high risk of liquidation!

      - alert: AAVECollateralsLiquidation
        expr: aave_bot_collateral_percentage{zone="liquidation", bin="2"} > 0
        labels:
          severity: high
        annotations:
          summary: AAVE collaterals under liquidation has been detected!

